


@model SampleMVCCoreEmployee.Models.VEmployeeModel

@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>VEmployeeAddEdit</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="VEmployeeAddEdit" asp-controller="VEmployee" autocomplete="off">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" asp-for="empid" />
            <div class="form-group">
                <label class="control-label">Name</label>
                <input type="text" asp-for="empname" class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label">Designation</label>
                <input type="text" asp-for="designation" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Salary</label>
                <input type="text" asp-for="salary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="VEmployeeDetail">Back to List</a>
</div>



